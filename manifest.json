{
  "manifest_version": 3,
  "name": "QuickSnap",
  "version": "1.0.3",
  "description": "Capture anything - YouTube moments or whole tabs - snap quickly, save effortlessly, paste seamlessly.",
  "permissions": [
    "tabs",
    "activeTab",
    "downloads",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Take Screenshot"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html"
}
